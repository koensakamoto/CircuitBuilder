# Test runner Dockerfile
FROM ubuntu:22.04

# Prevent interactive prompts during package installation
ENV DEBIAN_FRONTEND=noninteractive
ENV TZ=UTC

# Install test dependencies (including Qt Core for QVector)
RUN apt-get update && apt-get install -y \
    build-essential \
    cmake \
    libgtest-dev \
    libgmock-dev \
    bc \
    gcovr \
    lcov \
    qt6-base-dev \
    xvfb \
    && rm -rf /var/lib/apt/lists/*

# Build Google Test
RUN cd /usr/src/gtest && \
    cmake . && \
    make && \
    cp lib/*.a /usr/lib

# Set working directory
WORKDIR /app

# Copy project files
COPY . .

# Set display for GUI tests
ENV DISPLAY=:99
ENV QT_QPA_PLATFORM=offscreen

# Default command runs tests
CMD ["sh", "-c", "Xvfb :99 -screen 0 1024x768x24 & sleep 2 && ./run-tests.sh"]