# Development Dockerfile with build tools
FROM ubuntu:22.04

# Install development dependencies
RUN apt-get update && apt-get install -y \
    build-essential \
    cmake \
    git \
    wget \
    gdb \
    valgrind \
    lcov \
    gcovr \
    libgl1-mesa-dev \
    libglu1-mesa-dev \
    qt6-base-dev \
    qt6-base-dev-tools \
    qmake6 \
    qtcreator \
    libxcb-xinerama0 \
    libxkbcommon-x11-0 \
    libxcb-icccm4 \
    libxcb-image0 \
    libxcb-keysyms1 \
    libxcb-randr0 \
    libxcb-render-util0 \
    libxcb-xinerama0 \
    libxcb-xinput0 \
    libxcb-xfixes0 \
    libx11-xcb1 \
    libxcb-shape0 \
    libxcb-sync1 \
    libxrender1 \
    libxi6 \
    libfontconfig1 \
    libfreetype6 \
    libxext6 \
    libx11-6 \
    libice6 \
    libsm6 \
    libxcb1 \
    libxcb-glx0 \
    libxcb-cursor0 \
    x11-apps \
    xvfb \
    && rm -rf /var/lib/apt/lists/*

# Create non-root user
RUN useradd -m -s /bin/bash developer

# Set working directory
WORKDIR /app

# Switch to developer user
USER developer

# Set environment variables
ENV DISPLAY=:99
ENV QT_QPA_PLATFORM=xcb

# Default command
CMD ["/bin/bash"]